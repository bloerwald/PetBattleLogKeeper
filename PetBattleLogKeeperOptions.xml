<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
  <Script file="PetBattleLogKeeperOptions.lua" />
  <Frame name="PetBattleLogKeeperOptions" hidden="true">
    <Layers>
      <Layer level="ARTWORK">
        <FontString name="$parentTitle" text="PBLK_LABEL" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
          <Anchors>
            <Anchor point="TOPLEFT">
              <Offset>
                <AbsDimension x="16" y="-16"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentSubText" text="PBLK_SUBTEXT" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
          <Size>
            <AbsDimension y="32" x="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
              <Offset>
                <AbsDimension x="0" y="-8"/>
              </Offset>
            </Anchor>
            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="-32" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <CheckButton name="$parentAutoLog" inherits="InterfaceOptionsCheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT" x="-2" y="-8" />
        </Anchors>
        <Scripts>
          <OnLoad function="PetBattleLogKeeperOptionsAutoLog_OnLoad" />
        </Scripts>
      </CheckButton>
      <CheckButton name="$parentDontAutoLogPve" inherits="InterfaceOptionsCheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentAutoLog" relativePoint="BOTTOMLEFT" x="0" y="-8" />
        </Anchors>
        <Scripts>
          <OnLoad function="PetBattleLogKeeperOptionsDontAutoLogPve_OnLoad" />
        </Scripts>
      </CheckButton>
      <CheckButton name="$parentAutoOpenWindow" inherits="InterfaceOptionsCheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentDontAutoLogPve" relativePoint="BOTTOMLEFT" x="0" y="-8" />
        </Anchors>
        <Scripts>
          <OnLoad function="PetBattleLogKeeperOptionsAutoOpenWindow_OnLoad" />
        </Scripts>
      </CheckButton>
      <CheckButton name="$parentDontSaveFullLog" inherits="InterfaceOptionsCheckButtonTemplate">
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parentAutoOpenWindow" relativePoint="BOTTOMLEFT" x="0" y="-8" />
        </Anchors>
        <Scripts>
          <OnLoad function="PetBattleLogKeeperOptionsDontSaveFullLog_OnLoad" />
        </Scripts>
      </CheckButton>
    </Frames>
    <Scripts>
      <OnLoad function="PetBattleLogKeeperOptions_OnLoad" />
    </Scripts>
  </Frame>
</Ui>
